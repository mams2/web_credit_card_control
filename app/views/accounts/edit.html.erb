<%= form_for @account do |f| %>
  Login: <%= f.text_field :login %><br />
  Nome : <%= f.text_field :name %><br />
  Senha : <%= f.password_field :password %><br />
  Confirmação de Senha : <%= f.password_field :password_confirmation %><br />
  Admin?    : <%= f.check_box :admin %><br />
  <%= f.submit "Criar Conta" %>
<% end %>
