<div class="text-center">
  <h1>Editar usuário</h1>
  <hr/>
  <%= form_for(@user) do |f| %>
    <div class="col-md-offset-3 col-md-5 ">
      <div class="form-group">
        <label> Nome: </label> 
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <%= f.submit 'Editar usuário', class:"btn btn-lg btn-primary" %>
    </div>
  <% end %>
</div>