<div class="text-center">
  <h1>Cadastrar Cartão</h1>
  <hr/>
  <%= form_for(@credit_card) do |f| %>
    <div class="col-md-offset-3 col-md-5 ">
      <div class="form-group">
        <label>Nome do cartão:</label> 
        <%= f.text_field :name, class: "form-control"%>
      </div>

      <div class="form-group">
        <label>Últimos 4 digitos:</label> 
        <%= f.text_field :last_four_digits, class: "form-control"%>
      </div>

      <div class="form-group">
        <label>Data de pagamento:</label>
        <%= f.select :payment_day, (1..31), class: "form-control"%>
      </div>
      <%= f.submit "Criar Cartão", class:"btn btn-lg btn-primary" %>
    </div>
  <% end %>
</div>